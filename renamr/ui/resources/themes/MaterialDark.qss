QDialog {
	background-color:#0B0D11;
	border: 1px solid #002226;
	/* border-radius: 4px; */
}
QPushButton{
	color: #a9b7c6;
	background-color: #061519;
	/* border-radius: 3px; */
	border: 1px solid #00171a;
	/* border-width: 1px;
	border-style: solid;
	border-bottom-color: #00171a;
	border-top-color: #00171a;
	border-left-color: #00171a;
	border-right-color: #00171a; */
	/* margin-left: 10px;
