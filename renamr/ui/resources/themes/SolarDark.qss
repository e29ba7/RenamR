QDialog {
	background-color:#001315;
	border: 1px solid #002226;
	/* border-radius: 4px; */
}
QPushButton{
	color: #a9b7c6;
	background-color: #001d20;
	/* border-radius: 3px; */
	border: 1px solid #00171a;
	/* border-width: 1px;
	border-style: solid;
	border-bottom-color: #00171a;
	border-top-color: #00171a;
	border-left-color: #00171a;
	border-right-color: #00171a; */
